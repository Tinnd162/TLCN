@page
@model AdminWebApp.Pages.Product_DetailModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

@if (Model.Product != null)
{
    <section class="mb-5 mt-5">

        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">

                <div id="mdb-lightbox-ui"></div>

                <div class="mdb-lightbox">

                    <div class="row product-gallery mx-1">

                        <div class="col-12 mb-0">
                            <figure class="view overlay rounded z-depth-1 main-img">
                                <img src="@Model.Product.LinkImage"
                                     class="img-fluid z-depth-1">
                            </figure>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-md-6">

                <h5>@Model.Product.Name</h5>
                <p class="mb-2 text-muted text-uppercase small">@Model.Product.Id</p>
                <div class="table-responsive">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Mã sản phẩm</strong></th>
                                <td>@Model.Product.Id</td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Tên sản phẩm</strong></th>
                                <td>@Model.Product.Name </td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Đơn giá</strong></th>
                                <td>@Model.Product.SalePrice</td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Số lượng</strong></th>
                                <td>@Model.Product.Quantity</td>
                            </tr>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>Mô tả</strong></th>
                                <td>@Model.Product.Description</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr>
                <a asp-page="EditProduct" asp-route-ProductID="@Model.Product.Id" class="btn btn-primary btn-md mr-1 mb-2">Chỉnh sửa</a>
                <a asp-route-ProductID="@Model.Product.Id" asp-page-handler="Delete" class="btn btn-primary btn-md mr-1 mb-2">Xóa sản phẩm</a>
                <a asp-page="Product" class="btn btn-default btn-md mr-1 mb-2 text-dark">Quay lại</a>
            </div>
        </div>
    </section>
    <p class="text-danger">@if (ViewData["Error"] != null)
    {@ViewData["Error"]}</p>
}
else
{
    <h4>Lỗi load chi tiết sản phẩm, thử lại!</h4>
}