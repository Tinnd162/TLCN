@model CategoryModel

<div class="card">
    <a asp-page="ProductDetail" asp-route-productId="@Model.Id">
        <img asp-append-version="true" class="card-img-top" src="@Model.ImageFile" alt=""
            style="height: 235px ;object-fit:contain;">
    </a>
    <div class="card-body">
        <h4 class="card-title">
            <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="color-main"
                style="display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden; height: 50px; font-size:20px">@Model.Name</a>
        </h4>
        <div class="row">
            <div class="col">
                <p class="btn btn-danger btn-block">@Model.SalePrice $</p>
            </div>
            <div class="col">
                <form asp-page-handler="AddToCart" method="post" name="addToCartForm" id="add_cart_form">
                    <a href="javascript:;" onclick="parentNode.submit();" class="btn btn-success btn-block">
                        Thêm giỏ hàng
                    </a>
                    <input type="hidden" asp-for="@Model.Id" name="productId" />
                </form>

            </div>
        </div>
    </div>
</div>
